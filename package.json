{
  "name": "aleromano.com",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "npm run generate-cv && astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "predocker:build": "npm test",
    "docker:build": "docker build -t aleromano.com .",
    "docker:clean": "docker compose down --remove-orphans",
    "docker:dev": "npm run docker:clean && docker compose -f docker-compose.yml -f docker-compose.dev.yml up --build",
    "translate": "node scripts/translate.js",
    "translate:missing": "node scripts/translate-missing.js",
    "generate-cv": "node scripts/generate-cv.js",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/markdown-remark": "^6.0.2",
    "@astrojs/node": "^9.4.1",
    "@astrojs/rss": "^4.0.11",
    "astro": "^5.13.2",
    "nodemailer": "^7.0.3",
    "rehype-external-links": "^3.0.0",
    "reveal.js": "^5.2.1",
    "shiki": "^1.1.7",
    "turndown": "^7.2.0",
    "typescript": "^5.5.4"
  },
  "devDependencies": {
    "@astrojs/sitemap": "^3.5.0",
    "@types/node": "^24.0.1",
    "@types/nodemailer": "^6.4.17",
    "@types/reveal.js": "^5.2.0",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "eslint-plugin-astro": "^0.31.4",
    "vitest": "^3.0.5"
  }
}