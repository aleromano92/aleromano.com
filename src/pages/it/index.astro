---
import BaseLayout from '../../layouts/BaseLayout.astro';
import BaseIndex, { getHomeTranslations } from '../../components/pages/BaseIndex.astro';
import type { SupportedLanguage } from '../../types/i18n';

const pageTitle = 'Home';

// Set language to Italian for this page
const language: SupportedLanguage = 'it';

// Get translations for Italian
const t = getHomeTranslations(language);

// Page description for SEO and social sharing
const pageDescription = t.pageDescription;

// Set language info for BaseLayout
const i18nData = {
    currentLang: language,
};
---

<BaseLayout
    pageTitle={pageTitle}
    showNotACookieBannerAutomatically={true}
    description={pageDescription}
    i18nData={i18nData}
>
    <BaseIndex language={language} />
</BaseLayout>
