---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import { getLanguageFromURL } from '../utils/i18n';
import PostsGrid from '../components/posts/PostsGrid.astro';

const currentLang = getLanguageFromURL(Astro.url.pathname);
const posts = await getCollection('blog');
const localizedPosts = posts
  .filter((post) => post.slug.startsWith(currentLang + '/'))
  .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime());

// Page description for SEO and social sharing
const pageDescription =
  'Latest blog posts about software engineering, leadership, career growth, and engineering culture by Alessandro Romano.';

export const prerender = true;
---

<BaseLayout pageTitle="Blog" description={pageDescription}>
  <section>
    <PostsGrid posts={localizedPosts} />
  </section>
</BaseLayout>
