---
import { Image } from 'astro:assets';
import profilePic from '../assets/alepro.png';
import '../styles/theme.css';
import '../styles/global.css';

const { frontmatter } = Astro.props;
const pageTitle = frontmatter.title || 'Alessandro Romano - CV';
const description = frontmatter.description || 'Curriculum Vitae of Alessandro Romano';
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{pageTitle}</title>
        <meta name="description" content={description} />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <style>
            body {
                font-family: var(--font-family);
                color: var(--color-text);
                background-color: var(--color-bg);
                line-height: var(--line-height-base);
                margin: 0;
                padding: 0;
            }

            .cv-container {
                max-width: 800px;
                margin: 0 auto;
                padding: 3rem 1.5rem;
            }

            .header-image {
                float: left;
                margin-right: 2rem;
                margin-bottom: 1rem;
            }

            .profile-image {
                display: block;
            }

            .cv-section {
                margin-bottom: 3rem;
            }

            /* Markdown Content Styling - targeting elements inside the slot */
            .markdown-content :global(h1) {
                font-size: 2.5rem;
                margin: 0 0 0.5rem 0;
                color: var(--color-text-primary);
                line-height: 1.2;
                text-align: left;
            }

            .markdown-content :global(h2) {
                font-size: 1.5rem;
                color: var(--color-text-primary);
                border-bottom: 1px solid var(--color-border-light);
                padding-bottom: 0.5rem;
                margin-bottom: 1.5rem;
                text-transform: uppercase;
                letter-spacing: 1px;
                margin-top: 2rem;
            }

            .markdown-content :global(h3) {
                font-size: 1.2rem;
                font-weight: 700;
                color: var(--color-text-primary);
                margin-bottom: 0.2rem;
                margin-top: 2rem;
            }

            .markdown-content :global(h3:first-of-type) {
                margin-top: 0;
            }

            .markdown-content :global(strong) {
                font-weight: 600;
                color: var(--color-text-primary);
            }

            .markdown-content :global(ul) {
                padding-left: 1.5rem;
                margin-bottom: 1rem;
                display: grid;
            }

            .markdown-content :global(li) {
                margin-bottom: 0.5rem;
            }

            .markdown-content :global(p) {
                margin-bottom: 1rem;
            }

            .markdown-content :global(hr) {
                border: 0;
                border-top: 1px solid var(--color-border-light);
                margin: 2rem 0;
                clear: both;
            }

            .markdown-content :global(a) {
                color: var(--color-accent);
                text-decoration: none;
            }

            .markdown-content :global(a:hover) {
                text-decoration: underline;
            }

            @media (max-width: 600px) {
                .header-image {
                    float: none;
                    text-align: center;
                    margin-right: 0;
                    margin-bottom: 1.5rem;
                }

                .profile-image {
                    margin: 0 auto;
                }

                .markdown-content :global(h1) {
                    font-size: 2rem;
                    text-align: center;
                }
            }

            @media print {
                body {
                    background-color: var(--color-bg) !important;
                    -webkit-print-color-adjust: exact;
                    print-color-adjust: exact;
                    color: black;
                }

                .cv-container {
                    max-width: 100%;
                    padding: 2rem; /* Added padding for print */
                    margin: 0;
                }

                .markdown-content :global(h2),
                .markdown-content :global(h3) {
                    break-after: avoid;
                }

                .markdown-content :global(p),
                .markdown-content :global(li) {
                    break-inside: avoid;
                }

                a {
                    text-decoration: none;
                    color: black;
                }
            }
        </style>
    </head>
    <body>
        <div class="cv-container">
            <div class="markdown-content">
                <div class="header-image">
                    <Image
                        src={profilePic}
                        alt="Alessandro Romano"
                        width={210}
                        height={250}
                        class="profile-image"
                        quality="high"
                    />
                </div>
                <slot />
            </div>
        </div>
    </body>
</html>
