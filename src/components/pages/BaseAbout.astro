export function getAboutTranslations(language: SupportedLanguage): AboutTranslations {
    return aboutTranslations[language];
}

interface Props {
    language: SupportedLanguage;
}

const { language } = Astro.props;

// Get translations for the current language
const t = getAboutTranslations(language);

// Fetch Twitter data server-side with built-in error handling
const twitterData = await getTwitterPosts(language);
---

<h2>
    {t.tagline}
</h2>

<!-- Table of Contents -->
<nav class="toc">
    <h3>{t.tocTitle}</h3>
    <ul>
        <li><a href="#biography">{t.tocBiography}</a></li>
        <li><a href="#experience">{t.tocExperience}</a></li>
        <li><a href="#now">{t.tocNow}</a></li>
    </ul>
</nav>

<!-- Biography Section -->
<section id="biography" class="biography">
    <h3>{t.biographyTitle}</h3>
    <div class="biography-content">
        <div class="content">
            <p>{t.biographyIntro}</p>
            <p>{t.biographyTechAddiction}</p>
            <p>{t.biographyPokemon}</p>
            <p>{t.biographyJourney}</p>
        </div>
        <Image
            src={profilePic}
            alt={t.profilePicAlt}
            width={300}
            priority
            densities={[1, 2]}
            quality="max"
            class="profile-pic"
        />
    </div>
</section>

<!-- Work Experience Section -->
<section id="experience" class="experience">
    <h3>{t.experienceTitle}</h3>
    <div class="cv-download">
        <a href="/cv-alessandro-romano.pdf" download class="cv-button">
            {t.experienceDownloadCV}
        </a>
    </div>

    <div class="job-entries">
        <!-- Current Position Badge -->
        <div class="current-badge">{t.currentPosition}</div>

        <!-- Mollie -->
        <article class="job-entry current">
            <div class="job-header">
                <div class="company-info">
                    <h4>{t.mollieTitle}</h4>
                    <span class="mollie-logo-wrapper">
                        <img src="/Mollie-Logo-Black-2023.svg" class="mollie-logo light-logo" alt="Mollie" />
                        <img src="/Mollie-Logo-White-2023.svg" class="mollie-logo dark-logo" alt="Mollie" />
                    </span>
                </div>
                <div class="job-meta">
                    <span class="role">{t.mollieRole}</span>
                    <span class="period">{t.molliePeriod}</span>
                </div>
            </div>
            <p class="job-description">{t.mollieDescription}</p>
            <ul class="achievements">
                {t.mollieAchievements.map((achievement) => <li>{achievement}</li>)}
            </ul>
        </article>

        <!-- KPN -->
        <article class="job-entry">
            <div class="job-header">
                <div class="company-info">
                    <h4>{t.kpnTitle}</h4>
                </div>
                <div class="job-meta">
                    <span class="role">{t.kpnRole}</span>
                    <span class="period">{t.kpnPeriod}</span>
                </div>
            </div>
            <p class="job-description">{t.kpnDescription}</p>
            <ul class="achievements">
                {t.kpnAchievements.map((achievement) => <li>{achievement}</li>)}
            </ul>
        </article>

        <!-- Microsoft -->
        <article class="job-entry">
            <div class="job-header">
                <div class="company-info">
                    <h4>{t.microsoftTitle}</h4>
                </div>
                <div class="job-meta">
                    <span class="role">{t.microsoftRole}</span>
                    <span class="period">{t.microsoftPeriod}</span>
                </div>
            </div>
            <p class="job-description">{t.microsoftDescription}</p>
            <ul class="achievements">
                {t.microsoftAchievements.map((achievement) => <li>{achievement}</li>)}
            </ul>
        </article>
    </div>
</section>

<!-- Now Section -->
<section id="now" class="now">
    <h3>{t.nowTitle}</h3>
    <p class="now-subtitle">{t.nowSubtitle}</p>

    <div class="now-content">
        <div class="now-item">
            <h4>🚀 Work</h4>
            <p>{t.nowCurrently}</p>
        </div>

        <div class="now-item">
            <h4>📚 Learning</h4>
            <p>{t.nowLearning}</p>
        </div>

        <div class="now-item">
            <h4>📖 Reading</h4>
            <p>{t.nowReading}</p>
        </div>

        <div class="now-item">
            <h4>💻 Side Projects</h4>
            <p>{t.nowSideProjects}</p>
        </div>

        <div class="now-item">
            <h4>🏠 Personal</h4>
            <p>{t.nowPersonal}</p>
        </div>
    </div>

    <!-- Collapsible Historical Entries -->
    <details class="history-toggle">
        <summary>{t.showHistory}</summary>
        <div class="historical-entries">
            <div class="historical-entry">
                <h5>May 2024</h5>
                <p>
                    Launched major platform improvements at Mollie, focused on learning Rust, reading "Staff Engineer"
                    by Will Larson. Started exploring AI-assisted development workflows.
                </p>
            </div>
            <div class="historical-entry">
                <h5>February 2024</h5>
                <p>
                    Completed Team Topologies workshop, implemented new team structure at Mollie. Deep dive into system
                    design patterns and organizational psychology.
                </p>
            </div>
            <div class="historical-entry">
                <h5>November 2023</h5>
                <p>
                    Spoke at local tech meetup about engineering management, launched personal blog redesign, focused on
                    improving work-life balance with new morning routine.
                </p>
            </div>
        </div>
    </details>
</section>

<!-- Contact Section -->
<section class="contact">
    <p>
        {t.stayUpdated}
        <a href="https://x.com/intent/user?screen_name=_aleromano" target="_blank" rel="noopener noreferrer"
            >{t.followTwitter}</a
        > or <a href="/rss.xml">{t.subscribeRss}</a>
    </p>
    <p>
        {t.needHelp}
        <a href={language === 'it' ? '/it/contact' : '/contact'}>{t.letsTalk}</a>
    </p>
    <p class="back-to-top">
        <a href="#top">↑ Back to top</a>
    </p>
</section>

<TwitterFeed
    posts={twitterData.posts}
    error={twitterData.error}
    language={language}
    freshness={twitterData.freshness}
/>

<style>
    /* Table of Contents */
    .toc {
        background: var(--color-bg-secondary);
