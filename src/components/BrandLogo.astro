---
import { Image } from 'astro:assets';
import brandLogo from '../assets/brand-logo.jpg';
import brandLogoDark from '../assets/brand-logo-dark.jpg';
---

<div class="logo-container">
    <Image
        src={brandLogo}
        alt="Brand Logo"
        class="logo light-logo"
        width={86}
        height={86}
        densities={[2]}
        quality="high"
    />
    <Image
        src={brandLogoDark}
        alt="Brand Logo"
        class="logo dark-logo"
        width={86}
        height={86}
        densities={[2]}
        quality="high"
    />
</div>

<style>
    .logo-container {
        display: flex;
        align-items: center;
        height: 100%;
        min-width: 86px;
        height: 4rem;
        padding: 0.5rem 0;
    }

    .logo {
        height: 100%;
        width: auto;
        border-radius: 50%;
    }

    /* Show/hide based on theme */
    .dark-logo {
        display: none;
    }

    :global([data-theme='dark']) .dark-logo {
        display: block;
    }

    :global([data-theme='dark']) .light-logo {
        display: none;
    }

    /* Mobile centering */
    @media (max-width: 636px) {
        .logo-container {
            margin-left: auto;
        }
    }
</style>
